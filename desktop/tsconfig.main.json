{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist/main",
    "rootDir": "main",
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": ["main/**/*.ts"],
  "exclude": ["node_modules", "renderer"]
}
