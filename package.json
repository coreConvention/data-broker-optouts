{
  "name": "data-broker-optouts",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "tsx src/run-refactored.ts --manifest ./data/manifest.json --profile ./data/profile.json --headful",
    "start:headless": "tsx src/run-refactored.ts --manifest ./data/manifest.json --profile ./data/profile.json",
    "start:dry-run": "tsx src/run-refactored.ts --manifest ./data/manifest.json --profile ./data/profile.json --headful --dry-run",
    "start:filter": "tsx src/run-refactored.ts --manifest ./data/manifest.json --profile ./data/profile.json --headful --filter",
    "start:limited": "tsx src/run-refactored.ts --manifest ./data/manifest.json --profile ./data/profile.json --headful --limit 5",
    "start:stealth": "tsx src/run-refactored.ts --manifest ./data/manifest.json --profile ./data/profile.json --headful --stealth",
    "start:resume": "tsx src/run-refactored.ts --manifest ./data/manifest.json --profile ./data/profile.json --headful --resume",
    "extract:pdf": "tsx src/run.ts ./data/workbook.pdf > ./data/manifest.json",
    "help": "tsx src/run-refactored.ts --help",
    "build": "tsc --noEmit",
    "desktop:install": "cd desktop && npm install && cd renderer && npm install",
    "desktop:dev": "cd desktop && npm run dev",
    "desktop:build": "cd desktop && npm run build",
    "desktop:package": "cd desktop && npm run package",
    "desktop:package:win": "cd desktop && npm run package:win",
    "desktop:package:mac": "cd desktop && npm run package:mac",
    "desktop:package:linux": "cd desktop && npm run package:linux",
    "desktop:package:all": "cd desktop && npm run package:all"
  },
  "dependencies": {
    "@playwright/test": "^1.46.0",
    "zod": "^3.23.8",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "ts-node": "^10.9.2",
    "tsx": "^4.16.0",
    "typescript": "^5.5.4",
    "@types/yargs": "^17.0.32"
  }
}
